name: Sub - push :latest image to dockerhub

on:
  workflow_call:
    secrets:
      DOCKER_PASS:
        required: true
      DOCKER_USER:
        required: true
    inputs:
      IMAGE_TAG:
        required: true
        type: string

env:
  KOSLI_FLOW: ${{ vars.KOSLI_FLOW }}

jobs:
  to-dockerhub:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USER }}
          password: ${{ secrets.DOCKER_PASS }}

      - name: Build and push image:latest to Dockerhub Registry
        run: |
          docker pull cyberdojo/${{ env.KOSLI_FLOW }}:${{ inputs.IMAGE_TAG }}  
          docker tag cyberdojo/${{ env.KOSLI_FLOW }}:${{ inputs.IMAGE_TAG }} cyberdojo/${{ env.KOSLI_FLOW }}:latest
          docker push cyberdojo/${{ env.KOSLI_FLOW }}:latest
